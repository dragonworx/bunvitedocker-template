{
  "name": "fantoccini-3d",
  "version": "0.0.1",
  "description": "Make and shake",
  "scripts": {
    "dev": "bun run docker:dev",
    "dev:local": "concurrently \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun --hot run server/server.ts",
    "dev:client": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "docker:dev": "docker-compose up web-dev",
    "docker:clean": "docker-compose down -v --remove-orphans && docker-compose rm -f",
    "docker:fresh": "bun run docker:clean && bun run docker:dev",
    "docker:build": "docker-compose build web-prod",
    "docker:prod": "docker-compose up web-prod",
    "dev:all": "concurrently \"bun run docker:dev\" \"bun run dev\""
  },
  "devDependencies": {
    "@types/bun": "^1.2.21",
    "@types/node": "^24.3.0",
    "@vitejs/plugin-react": "^5.0.2",
    "bun-types": "latest",
    "concurrently": "^9.2.1",
    "serve": "^14.2.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "three": "^0.179.1"
  }
}
